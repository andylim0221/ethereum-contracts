{
  "author": "The Paypr Company",
  "name": "@paypr/ethereum-contracts",
  "description": "",
  "license": "GPL-3.0",
  "version": "0.3.0",
  "homepage": "https://paypr.money/",
  "repository": {
    "type": "git",
    "url": "https://github.com/paypr/ethereum-contracts"
  },
  "bugs": {
    "url": "https://github.com/paypr/ethereum-contracts/issues"
  },
  "files": [
    "artifacts",
    "dist",
    "types",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf build && rm -rf dist && rm -rf out && rm -rf types && rm -rf artifacts && rm -rf cache",
    "compile:contracts": "hardhat compile && npm run pretty",
    "build": "npm run compile:contracts && tsc",
    "build:watch": "tsc --watch",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "solhint 'contracts/**/*.sol' && eslint",
    "pretty": "pretty-quick",
    "network:development": "ganache-cli --deterministic --db tmp/network",
    "release": "standard-version",
    "prepublishOnly": "npm run rebuild && npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@openzeppelin/contracts": "4.3.2",
    "eslint": "7.32.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-prettier": "4.0.0",
    "ethers": "5.4.6",
    "typescript-eslint": "0.0.1-alpha.0"
  },
  "devDependencies": {
    "@ethereum-waffle/jest": "3.3.0",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@typechain/ethers-v5": "7.1.2",
    "@typechain/hardhat": "2.3.0",
    "@types/jest": "27.0.2",
    "@types/node": "16.10.1",
    "cz-conventional-changelog": "3.3.0",
    "ethereum-waffle": "3.4.0",
    "ganache-cli": "6.12.2",
    "hardhat": "2.6.4",
    "husky": "7.0.2",
    "jest": "27.2.2",
    "jest-junit": "12.3.0",
    "prettier": "2.4.1",
    "prettier-plugin-solidity": "1.0.0-beta.18",
    "pretty-quick": "3.1.1",
    "solhint": "3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "standard-version": "9.3.1",
    "truffle-flattener": "1.5.0",
    "ts-generator": "0.1.1",
    "ts-jest": "27.0.5",
    "ts-node": "10.2.1",
    "tsutils": "3.21.0",
    "typechain": "5.1.2",
    "typescript": "4.4.3"
  },
  "postinstall": "rm node_modules/web3/types/index.d.ts",
  "engines": {
    "npm": ">=6.13",
    "node": ">=12.16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "issueUrlFormat": "https://github.com/paypr/CHANGEME/issues/{{id}}",
    "issuePrefixes": [
      "#"
    ],
    "scripts": {
      "postchangelog": "npm run pretty"
    }
  }
}
