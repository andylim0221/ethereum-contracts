{
  "author": "The Paypr Company",
  "name": "@paypr/ethereum-contracts",
  "description": "",
  "license": "UNLICENSED",
  "version": "0.1.1",
  "homepage": "https://paypr.money/",
  "repository": {
    "type": "git",
    "url": "https://github.com/paypr/ethereum-contracts"
  },
  "bugs": {
    "url": "https://github.com/paypr/ethereum-contracts/issues"
  },
  "files": [
    "build",
    "dist",
    "types",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "clean": "rm -rf build && rm -rf dist && rm -rf out && rm -rf types",
    "compile:contracts": "oz compile && npm run pretty",
    "build": "npm run compile:contracts && tsc",
    "build:watch": "tsc --watch",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "posttest": "npm run lint",
    "lint": "solhint contracts/**/*.sol && tslint -c tslint.json --project tsconfig.json && tslint -c tslint.json --project spec/tsconfig.json",
    "pretty": "pretty-quick",
    "network:development": "ganache-cli --deterministic --db tmp/network",
    "release": "standard-version",
    "prepublishOnly": "npm run rebuild && npm run release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "@openzeppelin/contract-loader": "0.6.1",
    "@openzeppelin/contracts-ethereum-package": "3.0.0",
    "@openzeppelin/upgrades": "2.8.0"
  },
  "devDependencies": {
    "@openzeppelin/cli": "2.8.2",
    "@openzeppelin/test-environment": "0.1.4",
    "@openzeppelin/test-helpers": "0.5.6",
    "@truffle/hdwallet-provider": "1.0.42",
    "@types/bn.js": "4.11.6",
    "@types/jest": "26.0.0",
    "@types/node": "14.0.13",
    "cz-conventional-changelog": "3.2.0",
    "ganache-cli": "6.9.1",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "jest-junit": "11.1.0",
    "mnemonics": "1.1.3",
    "prettier": "2.0.5",
    "prettier-plugin-solidity": "1.0.0-alpha.54",
    "pretty-quick": "2.0.1",
    "solhint": "3.1.0",
    "solhint-plugin-prettier": "0.0.4",
    "standard-version": "8.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "8.10.2",
    "tslint": "5.20.1",
    "tslint-config-airbnb": "5.11.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-react": "4.2.0",
    "tsutils": "3.17.1",
    "typescript": "3.9.5",
    "web3": "1.2.11",
    "web3-core": "1.2.11",
    "web3-eth": "1.2.11"
  },
  "optionalDependencies": {},
  "postinstall": "rm node_modules/web3/types/index.d.ts",
  "engines": {
    "npm": ">=6.13",
    "node": ">=12.16"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "standard-version": {
    "issueUrlFormat": "https://github.com/paypr/CHANGEME/issues/{{id}}",
    "issuePrefixes": [
      "#"
    ],
    "scripts": {
      "postchangelog": "npm run pretty"
    }
  }
}
